<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="60dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin bác sĩ"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/tv_doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ tên:"
            android:textSize="18sp"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/tv_doctor_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="18sp"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/tv_doctor_specialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chuyên khoa:"
            android:textSize="18sp"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch khám"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"></TextView>

        <TextView
            android:text="Chọn ngày xem lịch"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="293dp"
            android:calendarViewShown="true"
            android:datePickerMode="spinner" />

        <Button
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem lịch khám" />

        <ListView
            android:id="@+id/listAppointments"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scrollbars="vertical"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_log_out"
            android:text="Đăng xuất"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>